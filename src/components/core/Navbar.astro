---
import tabs from '../../data/tabs.yml';

const { pageInfo } = Astro.props;

function tabHighlight(tabName: string)
{
	return pageInfo.tab == tabName.toLowerCase() ? ' highlighted' : '';
}
---

<div id="navbar" class="navbar">
	<div class="navigation">
		{tabs.map((tab) =>
			<a
				href={tab.link}
				class={'navigation-item' + tabHighlight(tab.name)}
			>
				{tab.name}
			</a>
		)}
	</div>
</div>

<script>
	let touchDevice = ('ontouchstart' in document.documentElement);
	let prevScrollpos = window.pageYOffset;

	window.addEventListener('scroll', () =>
	{
		let navbar = document.getElementById("navbar");

		if (touchDevice)
		{
			let currentScrollPos = window.pageYOffset;
			if (prevScrollpos > currentScrollPos)
			{
				navbar.style.top = "0";
			}
			else
			{
				navbar.style.top = "-64px";
			}
			prevScrollpos = currentScrollPos;
		}

		let navbarShadowClass = "shadow";
		if (document.body.scrollTop > 0 || document.documentElement.scrollTop > 0)
		{
			if (!navbar.classList.contains(navbarShadowClass))
			{
				navbar.classList.add(navbarShadowClass);
			}
		}
		else if (navbar.classList.contains(navbarShadowClass))
		{
			navbar.classList.remove(navbarShadowClass);
		}
	});
</script>

<style>
	.navbar {
		position: fixed;
		top: 0;
		height: 63px;
		background: white;
		width: 100%;
		z-index: 100;
		transition:
			box-shadow 0.3s ease,
			top 0.25s ease;
	}

	.navbar.shadow {
		box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.2), 0px 2px 6px 0px rgba(0, 0, 0, 0.1);
	}

	.navigation {
		display: flex;
		flex-direction: row;
		justify-content: center;
	}

	.navigation-item {
		position: relative;
		display: inline-block;
		margin: 0px 3px;
		user-select: none;
		text-decoration: none;
		font-family: 'Catamaran', sans-serif;
		font-weight: 900;
		font-size: 20px;
		padding: 20px 25px;
		box-shadow: inset 0 -4px 0 #fff;
		color: #333;
	}

	.navigation-item::after {
		content: '';
		position: absolute;
		left: 0;
		right: 0;
		bottom: 0;
		height: 5px;
		border-radius: 5px;
		background: #333;
		opacity: 0;
		transition: opacity 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
	}

	.navigation-item:hover::after,
	.navigation-item.highlighted::after {
		opacity: 1;
	}
</style>
