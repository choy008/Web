---
import { constructPageTitle } from '../../scripts/utilities';
import defaults from '../../data/defaults.yml';

const { pageInfo } = Astro.props;

const pageTitle = constructPageTitle(pageInfo);
const pageDescription = pageInfo.description ?? defaults.pageDescription;
const pageImage = import.meta.env.SITE + (pageInfo.image ?? defaults.pageImage);
---

<meta charset="utf-8">

<title>{pageTitle}</title>
<meta name="description" content={pageDescription}>
<meta name="viewport" content="width=device-width,initial-scale=1">

<meta property="og:title" content={pageTitle}>
<meta property="og:url" content={Astro.url}>
<meta property="og:description" content={pageDescription}>
<meta property="og:type" content="website"/>
<meta property="og:image" content={pageImage}>

<script is:inline src="/scripts/global.js"/>