---
const { project, contentBlock } = Astro.props;

import MediaControls from '../components/content_block/MediaControls.astro';
import { imageSize } from 'image-size';
import AspectRatioContentBlock from '../components/content_block/AspectContainer.astro';

const imagePath = `/assets/projects/${project.name}/${contentBlock.properties.data}`
let size = imageSize('./public/' + imagePath);
---

<AspectRatioContentBlock
	project={project}
	contentBlock={contentBlock}
	width={size.width}
	height={size.height}
>
	<img
		src={imagePath}
		alt=""
		class="project-detail-image"
		onload="fadeIn(this);"
	/>
	<MediaControls
		name={contentBlock.properties.data}
		path={imagePath}
		desc={'desc' in contentBlock.properties}
	/>
</AspectRatioContentBlock>

<style>
	.project-detail-image {
		opacity: 0;
		width: 100%;
		height: 100%;
	}
</style>